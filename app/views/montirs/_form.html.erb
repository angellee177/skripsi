
<%# Form  %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <%= form_for(@montir, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                <% if @montir.errors.any? %>
                     <div id="error_explanation">
                        <h2><%= pluralize(@montir.errors.count, "error") %> prohibited this pelanggan from being saved:</h2>

                        <ul>
                        <% @montir.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                        </ul>
                    </div>
                <% end %>
                <%# Montir Upload Picture %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :picture, "Profile Picture" %>
                    </div>
                    <div class="col-md-8">
                        <%= f.file_field :picture, class:'form-control', direct_upload: true%>
                    </div>
                </div>
                <%# Montir Name Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :name %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :name, class:'form-control', type:'text', placeholder:'Enter Your Name Here', autofocus: true%>
                    </div>
                </div>
                <%# Montir Username Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :username %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :username, class:'form-control', placeholder:'Enter your Email Here'%>
                    </div>
                </div>
                <%# Montir Email Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :email %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :email, class:'form-control', placeholder:'Enter your Email Here'%>
                    </div>
                </div>
                <%# Montir Tanggal Lahir Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :tanggal_lahir, "Tanggal Lahir Montir" %>
                    </div>
                    <div class="col-md-8">
                        <%= f.date_field :tanggal_lahir, class:'form-control', placeholder:'Enter your Username Here'%>
                    </div>
                </div>
                <%# Montir Profile picture upload %>
                <%# Montir Password Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :password %>
                    </div>
                    <div class="col-md-8">
                        <%= f.password_field :password, class:'form-control', placeholder:'Enter your Password'%>
                    </div>
                </div>
                <%# Montir Password Confirmation Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :password_confirmation, "Confirm Password" %>
                    </div>
                    <div class="col-md-8">
                        <%= f.password_field :password_confirmation, class:'form-control', placeholder:'Confirm your Password Here'%>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :potongan %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :potongan, class:'form-control', placeholder:'potongan gaji'%>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :bonus %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :bonus, class:'form-control', placeholder:'bonus'%>
                    </div>
                </diV>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <%= f.submit(@montir.new_record? ? "Create my account" : "Update my Account", class:"btn btn-primary btn-lg")%>
                    </div>
                </div>
            <% end %>
            <div class="col-md-4 col-md-offset-4">
                <%= link_to 'Cancel and Back to Pelanggan List', pelanggans_path %>
            </div>
        </div>
    </div>
</div>