<p id="notice"><%= notice %></p>
<%# Header with Sidebar Button %>
<div class="w3-container w3-black">
  <button class="w3-button w3-black w3-xlarge" onclick="w3_open()">â˜°</button>
  <div class="w3-container">
    <%= render 'templates/page_title', title:"Service List" %>
  </div>
</div>

<table class="table table-striped" style="overflow-x:auto;">
  <thead>
    <tr>
      <th>No.Sales</th>
      <th>Nama Pelanggan</th>
      <th>Detail Kerusakan</th>
      <th>Nomor Plat</th>
      <th>Total</th>
      <th>Montir</th>
      <th>Komisi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render 'sale', obj: @sale%>
  </tbody>
</table>

<br>
<div class="recipe-actions">
  <%= link_to 'New Sale', new_sale_path, class:'btn btn-primary', style:'color:white'  %>
  <% if logged_in? && (current_montir.admin?) %>
    <%= link_to 'Laporan Penggajian', sales_path(@sale, :format => :pdf), class:'btn btn-success' %>
    <%= link_to 'Laporan Sales', monthly_path(@sale_month, :format => :pdf), class:'btn btn-warning' %>
  <% end %>
</div>

