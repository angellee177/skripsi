<!DOCTYPE html>
<html>
    <head>
        <title>Nota Pembayaran</title>
        <%= wicked_pdf_stylesheet_link_tag "application" %>
    </head>
    <body>
        <div class="container">
  <div class="well col-md-8 col-md-offset-2">
    <%# Detail Data %>
    <div class="pull-left">  
    <ul>
      <hr/>
      <li>
          <strong>NIP:</strong>
          <%= @sale.pelanggan.code %>
      </li>
      <br>
      <li>
          <strong>Nama Customer:</strong>
          <%= @sale.pelanggan.nama %>
      </li>
      <br>
      <li>
          <strong>Plat Kendaraan:</strong>
          <%= @sale.no_kendaraan %>
      </li>
    </ul>
    </div>
    <%# Detail Nomor Perbaikan %>
    <div class="pull-right">
      <ul>
        <li>  
            <strong>Nomor ID Service:</strong>
            <%= @sale.id %>
        </li>
      </ul>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @sale.items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.product.price %></td>
          <td><%= item.quantity %></td>
          <td><%= item.subtotal %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <hr/>
    <%# Memunculkan Potongan Harga / Diskon %>
    <p class="pull-right">
      <p><strong>Potongan Harga:</strong></p>
      <%= @sale.diskon %>
     <%# Showing Total %>
      <p><strong>Total yang harus di bayar:</strong></p>
      <p><%= @sale.total_all %></p>
    </p>
   
    
    
    <%# Showing Montir and create at %>
    <div class="pull-right">
            <p class="center">
                <em>Created By:</em>
            </p>
            <p class="center">
                <small>
                    <%= @sale.montir.name.capitalize %>
                </small>
                <div class="pull-right">
                    <div class="pull-right">Created:<%= @sale.created_at %>
                </div>
            </p>
    </div>
  </div>
    </body>
</html>