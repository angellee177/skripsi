<p id="notice"><%= notice %></p>
<%# Header with Sidebar Button %>
<div class="w3-container w3-black">
  <button class="w3-button w3-black w3-xlarge" onclick="w3_open()">â˜°</button>
  <div class="w3-container">
    <%= render 'templates/page_title', title:"Product List" %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class:'btn btn-success', style:'color:white' %></td>
         <% if logged_in? && current_montir.admin? %>   
          <td><%= link_to 'Edit', edit_product_path(product), class:'btn btn-default' %></td>
          <td>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },
              class:'btn btn-danger', style:'color:white' %>
          </td>
         <% else %>
            <td></td>
            <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class:'btn btn-primary', style:'color:white' %>
