<%= render 'templates/page_title', title: "Login"%>
<%# Form  %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
                <%# Montir Username Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :email %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :email, class:'form-control', placeholder:'Enter your Email Here'%>
                    </div>
                </div>
                <%# Montir Password Column %>
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <%= f.label :password %>
                    </div>
                    <div class="col-md-8">
                        <%= f.password_field :password, class:'form-control', placeholder:'Enter your Password'%>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <%= f.submit "Login", class:"btn btn-primary btn-lg"%>
                    </div>
                </div>
            <% end %>
            <div class="col-md-6 col-md-offset-4">
                forgot password ?<span><%= link_to "Reset your password here", signup_path, style:'text-align:center' %></span> Or   <%= link_to "Create new Account Now", signup_path, style:'text-align:center' %>
            </div>
        </div>
    </div>
</div>